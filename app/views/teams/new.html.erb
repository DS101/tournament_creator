<h1>Добавление новой команды</h1>
<%= form_with scope: :team, url: teams_path, local: true do |form| %>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@team.errors.count, "error") %> не позволила
        сохранить команду:
      </h2>
      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label "Название" %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label "Доп. информация" %><br>
    <%= form.text_area :desc %>
  </p>

  <p>
    <%= form.submit "Сохранить" %>
  </p>
<% end %>

<%= link_to 'Назад', teams_path %>
